<article class="new-page">
<section class="edit-form-page">
<div class="form-heading">
    <h2> Changed your mind?</h2>
</div>
<div class="form-section">
    <form class="edit-post-form">
<div>
    <span>Title</span>
    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
</div>
<div class="post-content">
    <label for="post-content">Content</label>
    <textarea class="entry-field" id="post-content" name="post-content">{{post.content}}</textarea>
</div>
    <button type="submit">Change it!</button>
    <button type="button" class="delete-post-btn">Get rid of this!</button>
</form>
</div>
</section>
</article>
        {{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
        {{/if}}